{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "lib": ["DOM", "ES2016"]
    },
    "include": ["src"],
    "exclude": ["**/*.test.ts"]
}
